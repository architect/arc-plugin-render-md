{
  "name": "arcdown",
  "version": "0.1.1",
  "description": "A small stack of Markdown tools configured using the Architect's team preferred conventions.",
  "author": "",
  "repository": "@architect/arcdown",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/architect/arcdown/issues"
  },
  "type": "module",
  "scripts": {
    "dtslint": "dtslint types",
    "lint": "eslint src --fix",
    "tape": "tape test/* | tap-arc",
    "test": "npm run lint && npm run dtslint && npm run tape"
  },
  "main": "./src/index.js",
  "exports": "./src/index.js",
  "types": "types",
  "typings": "types",
  "files": [
    "src",
    "types/index.d.ts"
  ],
  "dependencies": {
    "@architect/syntaxes": "github:architect/syntaxes#v1.2.1",
    "highlight.js": "^11.5.1",
    "markdown-it": "^13.0.0",
    "markdown-it-external-anchor": "^1.0.0",
    "markdown-it-toc-and-anchor": "^4.2.0",
    "tiny-frontmatter": "^1.0.0"
  },
  "devDependencies": {
    "@architect/eslint-config": "^2.0.1",
    "@definitelytyped/dtslint": "^0.0.112",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^17.0.25",
    "eslint": "^8.13.0",
    "tap-arc": "^0.3.4",
    "tape": "^5.5.3",
    "typescript": "^4.6.3"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": "@architect/eslint-config"
  },
  "keywords": [
    "markdown"
  ]
}
